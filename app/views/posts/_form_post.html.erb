<div class="row">
  <dive class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit yield(:button), class: "btn btn-primary" %>
  
    <% end %>
  </div>
</div>